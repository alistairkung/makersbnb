<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <!-- <link rel="stylesheet" href="/resources/demos/style.css"> -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
    $(function() {
        $("#checkIn").datepicker({
            dateFormat: "yy-mm-dd",
            onSelect: function(){
            var checkIn = $(this).val();
            }
        });
    });

    $(function() {
        $("#checkOut").datepicker({
            dateFormat: "yy-mm-dd",
            onSelect: function(){
            var checkOut = $(this).val();
            }
        });
    });



    </script>
  </head>
  <!-- <script src="jquery.js"></script> -->
  <body>
    <% if flash[:notice] %>
    <div id='notice'>
      <%= flash[:notice] %>
    </div>
    <% end %>
    <h1>Listings</h1>
    <ul id='listings'>


      <% @listings.each do |listing| %>
      <li>
        <a href="/search/<%= listing.id %>", name='id'>
          Title: <%= listing.title %>
          Location: <%= listing.location %>
          Beds: <%= listing.beds %>
          Price: <%= listing.price %>
          Max guests: <%= listing.max_guests %>
        </a>
      </li>

      <% end %>
    </ul>

      <form action='/search' method='post'>
        <input type='text' name='location' />
        <input type='submit' value='Search'/>
      </form>

      Check-in : <input type="text" id="checkIn"> Check-out : <input type="text" id="checkOut"> &nbsp;
      <!-- <p>Check-out : <input type="text" id="checkOut"></p> -->
      <input type='submit' name="confirm-booking" value="Confirm Booking"
  </body>
</html>
